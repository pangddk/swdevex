extends ../layout/layout

block content
	div(class="row")
		div(class "col-xs-12 col-md-12")
			div(class="page-header")
				h1(class="text-center") ประวัติการยืมคืน
			br
	div(class="row")
		div(class="col-xs-12 col-md-12")
			form(class="form-horizontal form-center",role="search", method="POST", action="/userhistory")
				div(class="form-group")
					label(for="search", class="col-sm-4 control-label") ค้นหา
					div(class="col-sm-4")
						input(type="text", class="form-control", placeholder="ชื่อสมาชิก/ชื่ออุปกรณ์")
					div(class="col-sm-4")
						button(type="submit", class="btn btn-default") search
			table(id="itemTable", class="table table-striped")
				thead
					tr
						th วันที่ทำรายการ
						th รายการ
						th สมาชิก
						th สถานะ
						th
						th
				tbody
					if listBorrow.length <= 0
						tr
							td -
							td -
							td -
							td -
							td -
							td -
					else
						-each item in listBorrow
							tr
								td= item.date
								td= item.idwork
								td= item.nameuser + ' ' + item.surname
								td= item.status
								td
									a(href="thingdetail") รายละเอียด
								td(class="col-xs-4 col-md-1 text-right")
												a(class="btn btn-default", href= "/userhistory/delete?choose=" + item.idwork) ลบ
				