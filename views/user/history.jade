extends ../layout/layout

block content
	div(class="row")
		div(class "col-xs-12 col-md-12")
			div(class="page-header")
				h1(class="text-center") ประวัติการยืมคืน
			br
	div(class="row")
		div(class="col-xs-12 col-md-12")
			
			table(id="itemTable", class="table table-striped")
				thead
					tr
						th วันที่ทำรายการ
						th รายการ
						th สมาชิก
						th สถานะ
						th
						th
				tbody
					if listBorrow.length <= 0
						tr
							td -
							td -
							td -
							td -
							td -
							td -
					else
						-each item in listBorrow
							tr
								td= item.date.getDate() + "/" + item.date.getMonth() + "/" + item.date.getFullYear()
								td= item.idwork
								td= item.nameuser + ' ' + item.surname
								td= item.status
								td
									a(href="/thingdetail?choose="+ item.idwork) รายละเอียด
								td(class="col-xs-4 col-md-1 text-right")
												a(class="btn btn-default", href= "/userhistory/delete?choose=" + item.idwork) ลบ
				