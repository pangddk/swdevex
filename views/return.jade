extends layout/layout

block content
	div(class="row")
		div(class "col-xs-12 col-md-12")
			center
				div(class="page-header")
					h1 คืนอุปกรณ์
				br
	div(class="row")
		div(class "col-xs-12 col-md-12")
			table(id="itemTable", class="table table-striped")
				thead
					tr
						th วันที่
						th ชื่อ
						th รายการ
						th ประเภท
						th วันที่คืน
						th  
				tbody
					if listThing.length <= 0
						tr
							td -
							td -
							td -
							td -
							td - 
							td 
					else
						-each item in listThing
							tr
								td= item.date.getDate() + "/" + item.date.getMonth() + "/" + item.date.getFullYear()
								td= item.nameuser
								td= item.idwork
								td= item.type
								td= item.date.getDate()+7 + "/" + item.date.getMonth() + "/" + item.date.getFullYear()
								td
									a(class="btn btn-default", href= "/return/delete?choose=" + item.idwork) คืน
						
			


					
						
							