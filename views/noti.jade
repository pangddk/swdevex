extends layout/layout

block content
	div(class="row")
		div(class "col-xs-12 col-md-12")
			center
				div(class="page-header")
					h1 การแจ้งเตือน
				br
	div(class="row")
		div(class "col-xs-12 col-md-12")
			form(class="form-horizontal form-center",role="search", method="POST", action="/noti")
				div(class="form-group")
					label(for="search", class="col-sm-4 control-label") ค้นหา
					div(class="col-sm-4")
						input(type="text", class="form-control", placeholder="รายการ/username", name="search")
					button(type="submit", class="btn btn-default") search
			table(id="itemTable", class="table table-striped")
				thead
					tr
						th ชื่อ
						th รายการ
						th ประเภท
						th สถานะ 
				tbody
					if listThing.length <= 0
						tr
							td -
							td -
							td -
							td -
					else
						-each item in listThing
							tr
								td= item.nameuser
								td= item.idwork
								td
									a(href="detail") รายละเอียด
								td= item.status
	
						
			


					