extends layout/layout

block content
	div(class="row")
		div(class="col-xs-12 col-md-12")
			div(class="page-header")
				h1(class="text-center")= 'รายละเอียดรายการที่ ' + idwork
			table(id="itemTable", class="table table-striped")
				thead
					tr
						th วันที่ทำรายการ
						th รายการ
						th จำนวน
				tbody
					-each item in listBorrow
						tr
							td= item.date
							td= item.name
							td= item.amount
							
						