extends layout/layout

block content
	div(class="row")
		div(class "col-xs-12 col-md-12")
			center
				div(class="page-header")
					h1 การแจ้งเตือน
				br
			form(class="form-horizontal form-center",role="search", method="POST", action="/userhistory")
				div(class="form-group")
					label(for="search", class="col-sm-4 control-label") ค้นหา
					div(class="col-sm-4")
						input(type="text", class="form-control", placeholder="รายการ/username", name="search")
					button(type="submit", class="btn btn-default") search
			table(id="itemTable", align="center", style="width:50%", class="table table-striped")
				thead
					tr
						th รหัสการเบิก
						th วันที่ทำรายการ
						th user
				tbody
					-each item in listBorrow
						tr
							td= item.idborrow
							td= item.date
							td= item.username
							td
								a(href="detail") รายละเอียด