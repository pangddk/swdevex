
doctype html
html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title= title
        link(rel='stylesheet', href='/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/main.css')
        style. 
            h1 {
            font-family:‘supermarketregular’, Arial, sans-serif; 
            font-size:50px;
            text-align: center;
            }
            p {
            font-size:20px;
            text-align: center;
            }
    body
        div(class="container")
            nav(class="navbar navbar-default")
                div(class="container-fluid")
                    div(class="navbar-header")
                        button(type="button",class="navbar-toggle collapsed",data-toggle="collapse",data-target="#bs-example-navbar-collapse-1",aria-expanded="false")
                            span(class="sr-only") Toggle navigation
                            span(class="icon-bar")
                            span(class="icon-bar")
                            span(class="icon-bar")
                        a(class="navbar-brand",href="http://www.coe.psu.ac.th/") COE
                    div(class="collapse navbar-collapse",id="bs-example-navbar-collapse-1")
                        ul(class="nav navbar-nav")
                            li
                                a(href="home") Home

                            if user.roleid != 'admin'
                                li
                                    a(href="bring") เบิกอุปกรณ์
                                li
                                    a(href="borrow") ยืมอุปกรณ์
                                li
                                    a(href="return") คืนอุปกรณ์
                            else
                                li
                                    a(href="#") การแจ้งเตือน
                                li(class="dropdown")
                                    a(href="#", class="dropdown-toggle", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") อุปกรณ์
                                        span(class="caret")
                                    ul(class="dropdown-menu")
                                        li
                                            a(href="addthing")  เพิ่ม-ลบ อุปกรณ์
                                        li
                                            a(href="checkthing") รายละเอียดอุปกรณ์
                                li(class="dropdown")
                                    a(href="#", class="dropdown-toggle", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") สมาชิก 
                                        span(class="caret")
                                    ul(class="dropdown-menu")
                                        li
                                            a(href="adduser") เพิ่มสมาชิก
                                        li
                                            a(href="userdetail") รายชื่อสมาชิก
                                li
                                    a(href="history") ประวัติ

                        form(class="navbar-form navbar-right",role="search")
                            div(class="form-group")
                                input(type="text",class="form-control",placeholder="Search")
                                button(type="submit",class="btn btn-default") search
                        ul(class="nav navbar-nav navbar-right")
                            a(href="/logout")
                                button(type="button",class="btn btn-default navbar-btn") Sign out
            
            block content
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
        script(src="/js/bootstrap.min.js")
