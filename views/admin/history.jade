extends ../layout/layout

block content
	div(class="row")
		div(class "col-xs-12 col-md-12")
			div(class="page-header")
				h1(class="text-center") ประวัติการยืมคืน
			br
	div(class="row")
		div(class="col-xs-12 col-md-12")
			form(class="form-horizontal form-center",role="search",method="POST", action="/history")
				div(class="form-group")
					label(for="search", class="col-sm-4 control-label") ค้นหา
					div(class="col-sm-4")
						input(type="text", class="form-control", placeholder="ชื่อสมาชิก/ชื่ออุปกรณ์", name="search")
					div(class="col-sm-4")
						button(type="submit", class="btn btn-default") search
			table(id="itemTable", class="table table-striped")
				thead
					tr
						th วันที่ทำรายการ
						th รายการ
						th สมาชิก
						th สถานะ
				tbody
					-each item in listThing
						tr
							td= item.date.getDate() + "/" + item.date.getMonth() + "/" + item.date.getFullYear()
							td= item.idwork
							td= item.nameuser
							td= item.status
				