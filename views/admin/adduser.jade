extends ../layout/layout

block content
	div(class="row")
		div(class="col-xs-12 col-md-12")
			div(class="page-header")
				h1(class="text-center") เพิ่มสมาชิก
			br
	div(class="row")
		div(class="col-xs-12 col-md-12")
			form(class="form-horizontal", method="POST", action="/adduser")
				div(class="form-group")
					label(for="inputitemid", class="col-sm-5 control-label") ชื่อผู้ใช้(user name)
					div(class="col-sm-3")
						input(type="text", class="form-control", id="inputitemid", placeholder="", name="username")
				div(class="form-group")
					label(for="inputitemid", class="col-sm-5 control-label") รหัสผ่าน (password)
					div(class="col-sm-3")
						input(type="text", class="form-control", id="inputitemid", placeholder="", name="password")
				div(class="form-group")
					label(for="inputitemid", class="col-sm-5 control-label") roleID
					div(class="col-sm-3")
						input(type="number", class="form-control", id="inputitemid", placeholder="", name="idrole")
				div(class="form-group")
					label(for="inputitemid", class="col-sm-5 control-label") ชื่อ
					div(class="col-sm-3")
						input(type="text", class="form-control", id="inputitemid", placeholder="", name="nameuser")
				div(class="form-group")
					label(for="inputitemid", class="col-sm-5 control-label") สกุล
					div(class="col-sm-3")
						input(type="text", class="form-control", id="inputitemid", placeholder="", name="surname")
				div(class="form-group")
					label(for="inputitemid", class="col-sm-5 control-label") เบอ์โทรศัทพ์
					div(class="col-sm-3")
						input(type="text", class="form-control", id="inputitemid", placeholder="", name="tel")
				div(class="form-group")
					label(for="inputitemid", class="col-sm-5 control-label") รหัสบัตร(passcode)
					div(class="col-sm-3")
						input(type="number", class="form-control", id="inputitemid", placeholder="", name="passcode")
				div(class="form-group")
					label(for="inputitemid", class="col-sm-5 control-label") รหัส RFID
					div(class="col-sm-3")
						input(type="number", class="form-control", id="inputitemid", placeholder="", name="rfid")
				div(class="form-group")
					abel(for="inputitemid", class="col-sm-5 control-label")
					div(class="col-sm-3")
						button(type="submit", class="btn btn-default") เพิ่ม
				if message
					div(class="form-group")
						div(class="col-sm-offset-5 col-sm-10")
							p= message