extends ../layout/layout

block content
	div(class="row")
		div(class "col-xs-12 col-md-12")
			div(class="page-header")
				h1(class="text-center") รายละเอียดอุปกรณ์
			br
	div(class="row")
		div(class="col-xs-12 col-md-12")
			form(class="form-horizontal form-center",role="search", method="POST", action="/checkthing")
				div(class="form-group")
					label(for="search", class="col-sm-4 control-label") ค้นหา
					div(class="col-sm-4")
						input(type="text", class="form-control", placeholder="รหัส/ชื่ออุปกรณ์", name="search")
					div(class="col-sm-4")
						button(type="submit", class="btn btn-default") search
			table(id="itemTable", align="center", class="table table-striped")
				thead
					tr
						th รหัส
						th ชื่อ
						th จำนวน
						th delete
				tbody
					-each item in listThing
						tr
							td= item.idthing
							td= item.name
							td= item.amount
							td
								form(method="post", action="/checkthing/delete")
									input(type="text", name="idthing", value= item.idthing, hidden)
									button(type="submit",class="btn btn-default") delete


					